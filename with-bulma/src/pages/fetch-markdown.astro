---
import { Markdown } from 'astro/components';
// Layout Import
import MainLayout from '../layouts/MainLayout.astro';

const localData = Astro.fetchContent('../content/*.md');
---
<MainLayout
 title="Bulma Starter"
 description="Astro + bulma..."
 head={  
  <>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css">          
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>    
  </>  
}
>  
      
      <div class="content is-medium notification  is-primary is-light" style="margin:30px">
        <Markdown content={localData[0].astro.source} />           
      </div>
      <div class="content notification is-link is-light" style="margin:30px">
        <Markdown content={localData[1].astro.source} />           
      </div>
 
</MainLayout>