---
// Component Imports
import Navigation from '../components/Navigation.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import PostList from '../components/PostList.astro'
import MainHead from '../components/MainHead.astro'
import { Markdown } from 'astro/components';

// Data Fetching: List all Markdown posts in the repo.
let allPosts = Astro.fetchContent('./posts/*.md');
allPosts = allPosts.sort((a, b) => new Date(b.date) - new Date(a.date));
---
<html lang="en">
<head>
  <link rel="stylesheet" href="https://unpkg.com/flickity@2/dist/flickity.min.css">
  <script src="https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js"></script>
  <MainHead title='About Me' description={"Here's a quick summary..."} />
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const carouselEl = document.querySelector('.about-carousel');
      const carousel = new Flickity( carouselEl, {
        autoPlay: true,
        imagesLoaded: true, 
        percentPosition: false,
        wrapAround: true,
        resize: true,
      });
    })
  </script>
</head>
<body>
    <Navigation />
    <Header title="About Me" description="Here's a quick summary..." />
    <div class="container about-carousel">
      <img src="https://assets.codepen.io/1490503/mykal-6.jpg"  alt="">
      <img src="https://assets.codepen.io/1490503/mykal_and_dad.jpg" alt="Mykal and Dad">
      <img src="https://assets.codepen.io/1490503/mykal_alt.jpg" alt="">
      <img src="https://assets.codepen.io/1490503/mykal_4.jpg"  alt="">
      <img src="https://assets.codepen.io/1490503/mykal_5.jpg"  alt="">
      <img src="https://assets.codepen.io/1490503/mykal_3.jpg"  alt="">
    </div>
