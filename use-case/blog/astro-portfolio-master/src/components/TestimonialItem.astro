---
const { item } = Astro.props;
---
<div class="testimonial-item">
    <div class="testimonial-item--inner">
        <img width="64" height="64" src={item.image} alt={item.name}>
        <div class="testimonial-item--content">
            <strong>{item.name} <i>{item.title}</i></strong>
            <br />
            <p>{item.quote}</p>
        </div>
    </div>
</div>
<style lang="scss">
.testimonial-item {
    background: #000;
    width: 80%;
    padding: 0px;
    visibility: hidden;
    opacity: 0;
    height: 0px;
    transition: all 1s;
    border-radius: 5px;
    border: 2px solid var(--color-orange);
    &.active {
        opacity: 1;
        visibility: visible;
        height: auto;
        padding: 16px 24px;
    }
    &--inner {
        display: flex;
        align-items: center;
        margin-bottom: 8px;
        opacity: 1;
        visibility: visible;
        height: auto;
        padding: 16px 24px;
        img {
            width: 64px;
            height: 64px;
            border-radius: 50%;
            margin-right: 24px;
        }
    }
}
</style>